# Local Development Environment Configuration
NODE_ENV=development
PORT=3001

# Local PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_local_postgres_password
DB_NAME=beezly_local
DB_SSL=false
DB_LOGGING=true

# Azure Form Recognizer Configuration (optional for local testing)
AZURE_FORM_RECOGNIZER_ENDPOINT=https://your-resource.cognitiveservices.azure.com
AZURE_FORM_RECOGNIZER_API_KEY=your-azure-api-key

# OpenAI Configuration (for product normalization)
OPENAI_API_KEY=your-openai-api-key

# JWT Configuration (for local development)
JWT_SECRET=local_jwt_secret_for_development_only

# Supabase Configuration (for storage/auth)
# Option 1: Use staging Supabase for local development (recommended for simplicity)
SUPABASE_URL=https://<your-staging-project-ref>.supabase.co
SUPABASE_ANON_KEY=<your-staging-supabase-anon-key>
SUPABASE_SERVICE_ROLE_KEY=<your-staging-supabase-service-role-key>

# Option 2: Use separate local Supabase project (recommended for production apps)
# SUPABASE_URL=https://<your-local-project-ref>.supabase.co
# SUPABASE_ANON_KEY=<your-local-supabase-anon-key>
# SUPABASE_SERVICE_ROLE_KEY=<your-local-supabase-service-role-key>