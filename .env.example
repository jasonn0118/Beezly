# Application Environment Variables
# Web App (Next.js)
NEXT_PUBLIC_API_URL="http://localhost:3001"           # API base URL
NEXT_PUBLIC_SUPABASE_URL="your_supabase_url"          # Supabase project URL
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_supabase_anon_key" # Supabase anonymous key

# API (NestJS)
DATABASE_URL="postgresql://user:password@localhost:5432/beezly" # PostgreSQL connection string
JWT_SECRET="your_jwt_secret_here"                      # JWT signing secret
SUPABASE_URL="your_supabase_url"                      # Supabase project URL
SUPABASE_SERVICE_ROLE_KEY="your_service_role_key"     # Supabase service role key

# Mobile App (React Native/Expo)
EXPO_ACCESS_TOKEN="your_expo_access_token"            # Expo access token for publishing
EXPO_PUBLIC_API_URL="http://localhost:3001"          # API base URL for mobile
EXPO_PROJECT_ID="your_expo_project_id"               # EAS project ID

# CI/CD Environment Variables (GitHub Secrets)
STAGING_DEPLOY_KEY="your_staging_deploy_key"          # Staging deployment key
PRODUCTION_DEPLOY_KEY="your_production_deploy_key"    # Production deployment key