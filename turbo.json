{
    "$schema": "https://turborepo.org/schema.json",
    "remoteCache": {
      "signature": false
    },
    "tasks": {
      "dev": {
        "cache": false,
        "persistent": true
      },
      "build": {
        "outputs": ["dist/**", ".next/**", "build/**"],
        "dependsOn": ["^build"],
        "inputs": ["src/**", "*.config.*", "package.json"]
      },
      "lint": {
        "outputs": [],
        "inputs": ["src/**", "*.config.*", ".eslintrc.*", "package.json"]
      },
      "test": {
        "outputs": ["coverage/**"],
        "dependsOn": ["^build"],
        "inputs": ["src/**", "test/**", "*.config.*", "package.json"]
      },
      "test:e2e": {
        "outputs": [],
        "dependsOn": ["^build"],
        "inputs": ["src/**", "test/**", "*.config.*", "package.json"]
      },
      "type-check": {
        "outputs": [],
        "inputs": ["src/**", "*.config.*", "tsconfig*.json", "package.json"]
      },
      "schema:compare": {
        "outputs": [],
        "cache": false,
        "inputs": ["src/**", "*.config.*", "package.json"]
      },
      "supabase:sync": {
        "outputs": [],
        "cache": false,
        "inputs": ["src/**", "*.config.*", "package.json"]
      },
      "migration:run": {
        "outputs": [],
        "cache": false,
        "dependsOn": ["^build"],
        "inputs": ["src/**", "*.config.*", "package.json"]
      },
      "migration:check": {
        "outputs": [],
        "cache": false,
        "dependsOn": ["^build"],
        "inputs": ["src/**", "*.config.*", "package.json"]
      },
      "migration:show": {
        "outputs": [],
        "cache": false,
        "inputs": ["src/**", "*.config.*", "package.json"]
      },
      "migration:generate": {
        "outputs": ["src/migrations/**"],
        "cache": false,
        "inputs": ["src/**", "*.config.*", "package.json"]
      },
      "migration:revert": {
        "outputs": [],
        "cache": false,
        "inputs": ["src/**", "*.config.*", "package.json"]
      },
      "migration:mark-baseline": {
        "outputs": [],
        "cache": false,
        "inputs": ["src/**", "*.config.*", "package.json"]
      }
    }
  }
  